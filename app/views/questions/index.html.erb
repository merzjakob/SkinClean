<div class="container">
  <div class="row">
    <div class="chat-container">
      <div class="chatHeader">
        <h3>Chat with Judy</h3>
      </div>
      <div class="chatMessages">
        <div class="speech-wrapper">
          <ul class="messages-list">
            <% @questions.each do |question| %>
              <%= render partial: 'questions', :locals => {question: question}%>
              <% if question.answered?(current_user) %>
                  <%= render partial: 'answers', :locals => {question: question, current_user: current_user, questions: @questions}%>
          </ul>
        </div>
      </div>
        <% else %>
         <%= render partial: 'input_form', :locals => {question: question}%>
        <% end %>
        <% break unless question.answered?(current_user) %>
            <% end %>
        <% if current_user.finished_quiz? %>
          <div class="chatBottom fix-height flex-submit">
            <%=  link_to 'Submit', diagnoses_path, method: :post, class: "btn btn-solid"%>
          </div>
        <% end %>
    </div>
  </div>
</div>
