<div class="container">
  <div class="row">
      <div class="chat-container">
        <div class="chatHeader">
          <h3>
            Chat with Judy
          </h3>
        </div>
        <div class="chatMessages">
          <div class="speech-wrapper">
            <% @questions.each do |question| %>
              <div class="bubble">
              <div class="txt">
                <p class="name">Judy</p>



                <p class="message"><%= question.title %></p>
                <span class="timestamp">10:20 pm</span>
              </div>
              <div class="bubble-arrow"></div>
            </div>
              <% if question.answered?(current_user) %>
                <% if question.photo?  %>
                  <% current_user.patient_answers.each do |patient_answer| %>
                    <div>
                      <% if patient_answer.photo? %>
                        <div class="bubble alt">
                          <div class="txt">
                            <p class="name alt"><%= current_user.first_name %></p>
                            <p class="message"><%= image_tag patient_answer.photo.url %></p>
                            <span class="timestamp">10:22 pm</span>
                          </div>
                          <div class="bubble-arrow alt"></div>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="bubble alt">
                    <div class="txt">
                      <p class="name alt"><%= current_user.first_name %></p>
                      <p class="message"><%= current_user.patient_answers[@questions.index(question)].content %></p>
                      <span class="timestamp">10:22 pm</span>
                    </div>
                    <div class="bubble-arrow alt"></div>
                  </div>
                <% end %>
              <% else %>
            </div>
          </div>
          <div class="chatBottom">
            <% if question.multiple_choice %>
              <%= simple_form_for [question, @patient_answer] do |f| %>
                <%= f.input :content, collection: question.answers,value_method: :content, label_method: :content %>
                <%= f.submit %>
              <% end %>
            <% elsif question.photo %>
              <%= simple_form_for [question, @patient_answer] do |f| %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
                <%= f.submit %>
              <% end %>
            <% else %>
              <%= simple_form_for [question, @patient_answer] do |f| %>
                <%= f.input :content, label: false %>
                <%= f.submit %>
              <% end %>
            <% end %>
            <% end %>
            <% break unless question.answered?(current_user) %>
          <% end %>
        </div>
    </div>
  </div>
</div>

         <div class="chatBottom">
          <form action="#" onSubmit="return fals;" id="chatForm">
            <input type="hidden" name="text" value="user" >
            <textarea type="text" name="text" id="inputchat" value="" placeholder="type your message" ></textarea>
            <input type="submit" name="submit" value="Post" class="btn-solid"id="submitchat">
          </form>
        </div>
      </div>
  </div>

</div>

